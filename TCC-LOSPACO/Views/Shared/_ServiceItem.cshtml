@using System.Drawing;
@using System.IO;
@using TCC_LOSPACO.CustomHtmlHelper;
@model TCC_LOSPACO.Models.Service

<div data-zoom="1.1, .7s" class="item">
    <div class="row col-12-child m-col-6-child">
        <a href=@Url.Action("Service", "Home", new { id = Model.Id })>
            <img src="@CustomHtmlHelper.ImageSource(Model.Image)" class="img-img image-item" width="100%" height="500px"
                 alt="@Model.Name">
        </a>
        <div class="item-content row center-elements text-align-center-child m-2-child">
            <div class="info m-y-2-child">
                <h2 class="f-4 s-f-2 font-rale">@Model.Name</h2>
                <p class="s-f-0">@Model.MinifiedDesc</p>
                <div class="font-inc f-3 s-f-2">R$ @Model.Price</div>
            </div>
        </div>
    </div>
</div>
