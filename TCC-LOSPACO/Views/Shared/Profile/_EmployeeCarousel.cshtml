
@model List<TCC_LOSPACO.Models.Employee>

@{ if (Model.Count == 0) {
        @Html.Raw("<div class='f-6 font-jos'>Nenhum Funcionário encontrado para esta data e hora</div>");
    } else {
        for (int i = 0; i < Model.Count; i++) {
            if (i % 3 == 0) {
                @Html.Raw("<div class='bg-transparent justify-content-around carousel-item row col-4-child'>");
            }
            TCC_LOSPACO.Models.Employee emp = Model.ElementAt(i);
            @Html.Partial("Profile/_EmployeeCarouselItem", emp);
            if (i % 3 == 0) {
                @Html.Raw("</div>");
            }

        }
    }
}