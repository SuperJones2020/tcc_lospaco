                                    <div class="f-3 m-t-5 label-title">Imagem do serviço</div>
                                    <div class="row max-w m-t-3 customized-input no-wrap">
                                        <div class="col-1 row center-elements icon-input">
                                            <i class="fas fa-image"></i>
                                        </div>
                                        <input disabled class="col-9" data-id="servimage" type="file" name="image" />
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer edit-btn row center-elements bg-white">
                                            <i class="fas fa-pen"></i>
                                        </button>
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer save-btn row center-elements bg-white">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>
                                    <button type="button" data-open-pop-up="service_display_image" class="p-3 m-t-2 bg-transparent white cursor-pointer b-0" style="border-color: white">Ver imagem atual</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>