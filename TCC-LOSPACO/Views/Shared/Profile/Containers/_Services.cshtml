                                            <div class="row m-t-3 customized-input no-wrap">
                                                <div class="col-2 row icon-input">
                                                    <i class="fas fa-wallet"></i>
                                                </div>
                                                <input disabled class="col-10 total_sales" type="text" name="total_sales" />
                                            </div>
                                        </div>
                                        <div>
                                            <div class="f-3 m-t-5 label-title">Máximo de Pessoas</div>
                                            <div class="row m-t-3 customized-input no-wrap">
                                                <div class="col-1 row icon-input">
                                                    <i class="fas fa-users"></i>
                                                </div>
                                                <input disabled class="col-9 max_people" type="number" name="max_people"
                                                       value="2" />
                                                <button data-anim-to-black
                                                        class="col-1 cursor-pointer edit-btn row">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button data-anim-to-black
                                                        class="col-1 cursor-pointer save-btn row">
                                                    <i class="fas fa-check"></i>
