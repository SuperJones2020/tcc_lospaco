<div class="item">
    <div class="nav-height"></div>
    <div class="row center-elements" style="height: calc(100% - 5rem);">
        <button class="close bg-transparent position-absolute" data-close-pop-up="service_display_image">
            <i class="f-5 rotate-anim cursor-pointer fas fa-times z-20"></i>
        </button>
        <button type="button" data-item-button data-fill-to="down"
                class="open  bg-transparent cursor-pointer position-absolute">
            <i class="f-10 fas fa-toolbox"><br /><span>Serviços</span></i>
        </button>

        <div class="row center-elements content col-10 l-col-12 max-h p-1">
            <div class="overflow-hidden max-size">
                <div data-content="service" class="content-slider max-size">
                    <div class="min-max-w max-size flex direction-column">
                        <div class="header fg-0">
                            <div class="row no-wrap center-elements m-b-3">
                                <h2 class="f-8 text-align-center profile-title">
                                    Todos os Serviços
                                </h2>
                                <button data-zoom="1.3, 1s" data-follow-smoothly
                                        class="add-object-btn bg-transparent cursor-pointer p-3 m-x-2 ">
                                    <i class="f-6 m-f-4 fas fa-plus main-green"></i>
                                </button>
                            </div>
                            <div class="row customized-input no-wrap" style="width: 99.5%;">
                                <div class="col-1 row icon-input"><i class="fas f-3 fa-bullseye"></i></div>
                                <input class="col-10" type="text" name="name"
                                       placeholder="Procure por Nome" />
                                <button data-anim-to-black class="col-1 cursor-pointer edit-btn row">
                                    <i class="f-3 fas fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>

                        <div class="table-content text-align-center-child max-w fg-1">
                            @foreach (var s in TCC_LOSPACO.DAO.ServiceDAO.GetList()) {
                                @Html.Partial("Profile/TableItem/_Service", s);
                            }
                        </div>
                    </div>
                    <form data-loader=".main-loader" method="post" action="/Service/Insert"
                          data-on-success="OnServiceInserted" data-on-failure="() => createToast('Algo deu errado..', 2)"
                          data-form-request-sender="true" data-form-validate="true" data-form-is-valid="false" class="row center-elements min-max-w max-size">

                        <popup data-id="service_display_image" class="p-8 max-size z-10 row center-elements">
                            <div data-close-pop-up="service_display_image" class="max-size center-absolute position-absolute" style="background-color: rgba(0, 0, 0, .9)"></div>
                            <div data-id="image_display">
                                <img src="" class="img-img max-size">
                            </div>
                        </popup>

                        <div class="row col-11 l-col-12 max-h p-1 content-container">
                            <div class="max-w row col-12-child align-items-center">
                                <div>
                                    <div class="m-t-8 max-w row no-wrap center-elements">
                                        <button type="button" data-follow-smoothly
                                                class="bg-transparent cursor-pointer p-3 m-x-2 back-to-data-btn">
                                            <i class="f-6 m-f-4 fas fa-chevron-left"></i>
                                        </button>
                                        <h2 class="f-7 font-jos text-align-center profile-title">
                                            Dados sobre
                                            <b class="bolder font-jos f-7 profile-title title-focus"></b>
                                        </h2>
                                        <button type="submit" data-follow-smoothly
                                                class="d-none perform-add-request-btn bg-transparent cursor-pointer p-3 m-x-2 back-to-data-btn">
                                            <i class="f-6 m-f-4 far fa-plus-square main-green"></i>
                                        </button>
                                    </div>

                                    <div class="row max-w col-6-child l-col-12-child">
                                        <div class="p-r-1 l-p-none">
                                            <div class="f-3 m-t-5 label-title">Nome</div>
                                            <div class="row m-t-3 customized-input no-wrap">
                                                <div class="col-1 row icon-input">
                                                    <i class="fas fa-signature"></i>
                                                </div>
                                                <input disabled class="col-9" data-id="servname" type="text" name="name" required />
                                                <button type="button" data-anim-to-black
                                                        class="col-1 cursor-pointer edit-btn row">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="button" data-anim-to-black
                                                        class="col-1 cursor-pointer save-btn row">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="p-l-1">
                                            <div class="f-3 m-t-5 label-title">
                                                Descrição&nbsp;Minificada
                                            </div>
                                            <div class="row max-w m-t-3 customized-input no-wrap">
                                                <div class="col-1 row icon-input">
                                                    <i class="far fa-bookmark"></i>
                                                </div>
                                                <input disabled class="col-9" data-id="servsmalldesc" type="text" name="minified_desc" required />
                                                <button type="button" data-anim-to-black
                                                        class="col-1 cursor-pointer edit-btn row">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="button" data-anim-to-black
                                                        class="col-1 cursor-pointer save-btn row">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="f-3 m-t-5 label-title">Descrição Completa</div>
                                    <div class="row m-t-3 customized-input max-w no-wrap"
                                         style="height: auto !important;">
                                        <div class="col-1 row center-elements icon-input">
                                            <i class="fas fa-bookmark"></i>
                                        </div>
                                        <textarea disabled class="p-y-2 col-9 row" data-id="servdescr" type="text" name="desc" required
                                                  style="resize: none;"></textarea>
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer edit-btn row center-elements bg-white">
                                            <i class="fas fa-pen"></i>
                                        </button>
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer save-btn row center-elements bg-white">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>

                                    <div class="row max-w col-4-child l-col-12-child">
                                        <div>
                                            <div class="f-3 m-t-5 label-title">Preço</div>
                                            <div class="row m-t-3 customized-input no-wrap">
                                                <div class="col-2 row icon-input">
                                                    <i class="fas fa-money-bill-wave"></i>
                                                </div>
                                                <input disabled class="col-6" data-id="servprice" type="text" name="price" data-val-price data-val-field="Preço" required />
                                                <button type="button" data-anim-to-black
                                                        class="col-2 cursor-pointer edit-btn row">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="button" data-anim-to-black
                                                        class="col-2 cursor-pointer save-btn row">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="p-x-2 l-p-none max-w">
                                            <div class="f-3 m-t-5 label-title">Categoria</div>
                                            <div class="customized-dropdown m-t-3 bg-white" data-id="categoryid">
                                                <div class="row no-wrap max-size">
                                                    <div class="col-2 dropdown-icon row icon-input">
                                                        <i class="fas fa-stream"></i>
                                                    </div>
                                                    <div class="col-8 row align-items-center dropdown-select-item" data-option=""
                                                         style="border: none;">Categoria #1</div>
                                                    <div class="col-2 cursor-pointer dropdown-icon row open-dropdown justify-content-center icon-input">
                                                        <i class="fas fa-chevron-down"></i>
                                                    </div>
                                                </div>
                                                <div class="dropdown-content col-12-child row cursor-pointer-child b-0 position-absolute max-w z-3 p-3-child"
                                                     style="height: 0px; border-top: none; top: 100%;">
                                                    @foreach (var c in TCC_LOSPACO.DAO.CategoryDAO.GetList()) {
                                                        @TCC_LOSPACO.CustomHtmlHelper.CustomHtmlHelper.DropdownItem(c.Name, c.Id, "category_id")
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="f-3 m-t-5 label-title">Tempo</div>
                                            <div class="row m-t-3 customized-input no-wrap">
                                                <div class="col-2 row icon-input">
                                                    <i class="far fa-clock"></i>
                                                </div>
                                                <input disabled class="col-6" data-id="servtime" type="time" name="time" />
                                                <button type="button" data-anim-to-black
                                                        class="col-2 cursor-pointer edit-btn row">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="button" data-anim-to-black
                                                        class="col-2 cursor-pointer save-btn row">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="f-3 m-t-5 label-title">Vestimenta Adequada</div>
                                    <div class="row m-t-3 customized-input no-wrap">
                                        <div class="col-1 row icon-input">
                                            <i class="fas fa-tshirt"></i>
                                        </div>
                                        <input disabled class="col-9" data-id="servclothing" type="text" name="clothing" required />
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer edit-btn row">
                                            <i class="fas fa-pen"></i>
                                        </button>
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer save-btn row">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>

                                    <!--<div class="row max-w col-4-child l-col-12-child">
                                        <div>
                                            <div class="f-3 m-t-5 label-title">Relevância?</div>
                                            <div class="row m-t-3 customized-input no-wrap">
                                                <div class="col-2 row icon-input">
                                                    <i class="fas fa-star"></i>
                                                </div>
                                                <input disabled class="col-10" type="text" name="name"
                                                       value="80%" />
                                            </div>
                                        </div>
