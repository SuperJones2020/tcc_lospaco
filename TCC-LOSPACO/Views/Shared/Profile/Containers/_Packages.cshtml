<div class="item">
    <div class="nav-height"></div>
    <div class="row center-elements" style="height: calc(100% - 5rem);">
        <button class="close bg-transparent position-absolute">
            <i class="f-5 rotate-anim cursor-pointer fas fa-times z-20"></i>
        </button>
        <button type="button" data-item-button data-fill-to="right"
                class="open  bg-transparent cursor-pointer position-absolute">
            <i class="f-10 fas fa-boxes"><br /><span>Pacotes</span></i>
        </button>

        <div class="row center-elements content col-10 l-col-12 max-h p-1">
            <div class="overflow-hidden max-size">
                <div data-content="package" class="content-slider max-size">
                    <div class="min-max-w max-size flex direction-column">
                        <div class="header fg-0">
                            <div class="row no-wrap center-elements m-b-3">
                                <h2 class="f-8 text-align-center profile-title">
                                    Todos os Pacotes
                                </h2>
                                <button data-zoom="1.3, 1s" data-follow-smoothly
                                        class="add-object-btn bg-transparent cursor-pointer p-3 m-x-2 ">
                                    <i class="f-6 m-f-4 fas fa-plus main-green"></i>
                                </button>
                            </div>
                            <div class="row customized-input no-wrap" style="width: 99.5%;">
                                <div class="col-1 row icon-input"><i class="fas f-3 fa-bullseye"></i></div>
                                <input class="col-10" type="text" name="name"
                                       placeholder="Procure por Nome ou CPF" />
                                <button data-anim-to-black class="col-1 cursor-pointer edit-btn row">
                                    <i class="f-3 fas fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>

                        <div class="table-content text-align-center-child max-w fg-1">
                            @foreach (var p in TCC_LOSPACO.DAO.PackageDAO.GetList()) {
                                @Html.Partial("Profile/TableItem/_Package", p)
                            }
                        </div>
                    </div>
                    <form data-loader=".main-loader" method="post" action="/Package/Insert"
                          data-on-success="OnPackageInserted" data-on-failure="() => createToast('Algo deu errado..', 2)"
                          data-form-request-sender="true" data-form-validate="true" data-form-is-valid="false" class="row center-elements min-max-w max-size">

                        <popup data-id="package_display_image" class="max-size p-8 z-10 row center-elements">
                            <div data-close-pop-up="package_display_image" class="max-size center-absolute position-absolute" style="background-color: rgba(0, 0, 0, .9)"></div>
                            <div class="max-size" style="max-height: 100% !important" data-id="image_display">
                                <img src="" class="img-img max-size">
                            </div>
                        </popup>
                        <div class="row col-11 l-col-12 max-h p-1 content-container">
                            <div class="max-w row col-12-child align-items-center">
                                <div>
                                    <div class="m-t-8 max-w row no-wrap center-elements">
                                        <button type="button" data-follow-smoothly
                                                class="bg-transparent cursor-pointer p-3 m-x-2 back-to-data-btn">
                                            <i class="f-6 m-f-4 fas fa-chevron-left"></i>
                                        </button>
                                        <h2 class="f-7 font-jos text-align-center profile-title">
                                            Dados de <b class="bolder font-jos f-7 profile-title title-focus"></b>
                                        </h2>
                                        <button type="submit" data-follow-smoothly
                                                class="d-none perform-add-request-btn bg-transparent cursor-pointer p-3 m-x-2 back-to-data-btn">
                                            <i class="f-6 m-f-4 far fa-plus-square main-green"></i>
                                        </button>
                                    </div>


                                    <div class="row max-w col-6-child l-col-12-child">
                                        <div class="p-r-1 l-p-none">
                                            <div class="f-3 m-t-5 label-title">Nome</div>
                                            <div class="row m-t-1 customized-input no-wrap">
                                                <div class="col-1 row icon-input">
                                                    <i class="fas fa-signature"></i>
                                                </div>
                                                <input disabled class="col-9" data-id="packname" type="text" name="name" required />
                                                <button type="button" data-anim-to-black
                                                        class="col-1 cursor-pointer edit-btn row">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="button" data-anim-to-black
                                                        class="col-1 cursor-pointer save-btn row">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="p-l-1">
                                            <div class="f-3 m-t-5 label-title">Preço</div>
                                            <div class="row m-t-1 customized-input no-wrap">
                                                <div class="col-1 row icon-input">
                                                    <i class="fas fa-money-bill-wave"></i>
                                                </div>
                                                <input disabled class="col-9" data-id="packprice" type="text" name="price" data-val-price data-val-field="Preço" required />
                                                <button type="button" data-anim-to-black
                                                        class="col-1 cursor-pointer edit-btn row">
                                                    <i class="fas fa-pen"></i>
                                                </button>
                                                <button type="button" data-anim-to-black
                                                        class="col-1 cursor-pointer save-btn row">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="f-3 m-t-5 label-title">Descrição Minificada</div>
                                    <div class="row m-t-3 customized-input max-w no-wrap"
                                         style="height: auto !important;">
                                        <div class="col-1 row center-elements icon-input">
                                            <i class="far fa-bookmark"></i>
                                        </div>
                                        <textarea disabled class="p-y-2 col-9 row" data-id="packsmalldesc" type="text" name="minified_desc" required
                                                  style="resize: none;"></textarea>
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer edit-btn row center-elements bg-white">
                                            <i class="fas fa-pen"></i>
                                        </button>
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer save-btn row center-elements bg-white">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>
                                    <div class="f-3 m-t-5 label-title">Descrição</div>
                                    <div class="row m-t-3 customized-input max-w no-wrap"
                                         style="height: auto !important;">
                                        <div class="col-1 row center-elements icon-input">
                                            <i class="fas fa-bookmark"></i>
                                        </div>
                                        <textarea disabled class="p-y-2 col-9 row" data-id="packdescr" type="text" name="desc" required
                                                  style="resize: none;"></textarea>
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer edit-btn row center-elements bg-white">
                                            <i class="fas fa-pen"></i>
                                        </button>
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer save-btn row center-elements bg-white">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>

                                    <div class="f-3 m-t-5 label-title">Imagem</div>
                                    <div class="row max-w m-t-1 customized-input no-wrap">
                                        <div class="col-1 row center-elements icon-input">
                                            <i class="fas fa-image"></i>
                                        </div>
                                        <input disabled class="col-9" data-id="packimage" type="file" name="image" />
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer edit-btn row center-elements bg-white">
                                            <i class="fas fa-pen"></i>
                                        </button>
                                        <button type="button" data-anim-to-black
                                                class="col-1 cursor-pointer save-btn row center-elements bg-white">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>
                                    <button type="button" data-open-pop-up="package_display_image" class="p-3 m-t-2 bg-transparent white cursor-pointer b-0" style="border-color: white">Ver imagem atual</button>

                                    <div class="f-3 m-t-5 label-title">Serviços do Pacote</div>
                                    <div class="row m-t-1 customized-input no-wrap"
                                         style="height: auto !important;">
                                        <div class="col-2 row icon-input">
                                            <i class="fas fa-toolbox"></i>
                                        </div>
                                        <textarea data-always-disabled disabled class="col-10 p-y-2" data-id="items-input" type="text"
                                                  style="resize: none;"></textarea>
                                        <input class="d-none" data-id="items-id-input" type="text" name="services" />
                                    </div>

                                    <div class="max-size select-items-container flex direction-column">
                                        <div class="m-y-4 fg-0">
                                            <div class="row no-wrap center-elements m-b-1">
                                                <h2 class="f-5 text-align-center profile-title">
                                                    Selecione os
                                                    serviços para este pacote
                                                </h2>
                                            </div>
                                            <div class="row customized-input no-wrap" style="width: 99.5%;">
                                                <div class="col-1 row icon-input">
                                                    <i class="fas f-3 fa-bullseye"></i>
                                                </div>
                                                <input class="col-10" type="text"
                                                       placeholder="Procure por Nome" />
                                                <button type="button" data-anim-to-black
                                                        class="col-1 cursor-pointer edit-btn row">
                                                    <i class="f-3 fas fa-chevron-right"></i>
                                                </button>
                                            </div>
                                        </div>

                                        <div class="table-content text-align-center-child max-w fg-1" data-selected-items="">
                                            @foreach (var s in TCC_LOSPACO.DAO.ServiceDAO.GetList()) {
                                                @Html.Partial("Profile/TableItem/_Service", s);
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>