<section class="container package-container overflow-hidden">
    <div class="row justify-content-center">
        <div class="row bg-black max-w justify-content-center p-y-7 overflow-hidden">
            <div class="content m-y-2-child max-w white">
                <h2 class="f-8 s-f-5 package-h1 text-align-center" style="right: 50%; transform: translateX(-50%);">
                    Pacotes
                </h2>
                <p class="f-3 s-f-2 package-p text-align-center" style="left: 50%; transform: translateX(50%);">
                    Principais Pacotes
                </p>
            </div>
        </div>

        <div class="row justify-content-center max-w div-img" style="background-image: url('https://picsum.photos/id/196/1920/1080/?blur=7');">
            <div class="xxl-w p-y-8 justify-content-center row col-4-child l-col-12-child p-4-child">
                @{ 
                    var packageList = TCC_LOSPACO.DAO.PackageDAO.GetList();
                    int listCount = packageList.Count >= 3 ? 3 : packageList.Count;
                }
                @for (int i = 0; i < listCount; i++) {
                    ViewBag.PackageIndex = i + 1;
                    @Html.Partial("Home/_Package", packageList.ElementAt(i));
                }

            </div>
        </div>
    </div>
</section>
