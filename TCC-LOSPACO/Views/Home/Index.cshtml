@section scripts{
    <script>
        activeAside();
        activePackageContainer();
        homeScrollEffects();

        generateNewSignature().then(v => {
            sendRequest("post", "/Service/GetList", {}, {
                Loader: ".main-loader",
                ContentHeaders: [{ Key: "Authorization", Value: `Bearer ${v}` }],
                OnSuccess: res => {
                    const services = res.Services;
                    generateServices(".services-content", 25, 40, services);
                }
            });
        });


        activeCarousel({ carousel: ".main-carousel", time: .5, anim: "cubic-bezier(.73,.19,.14,.98)", interval: 5, overlap: true });
    </script>
}