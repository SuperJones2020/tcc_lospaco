    <script>
        activeProfileUI();
        activeEmployeeSelection();
        activeDateInput();
        activeCarousel({ prev: ".prev-item", next: ".prox-item", carousel: ".employee-carousel", time: .5, anim: "cubic-bezier(.73,.19,.14,.98)" });

        const containers = [
            {
                id: "customer",
                do: () => {

                }
            },
            {
                id: "employee",
                do: () => {

                }
            },
            {
                id: "package",
                do: () => {

                }
            },
            {
                id: "schedule",
                do: () => {

                }
            },
            {
                id: "service",
                do: form => {
                    const inputs = form.querySelectorAll(".customized-input");
                    const objectId = () => form.getAttribute("data-object-id");
                    let columns = [];
                    const ids = ["abstract_id", "name", "price", "minified_desc", "desc", "category", "time", "image", "propper_clothing"];
                    sendRequest("post", "/Service/GetTableColumns", {}, { OnSuccess: response => columns = response.columns })
                    const data = [
                        { data: null },
                        {
                            data: () => {
                                const newName = get(form, "name").value;
                                form.querySelector(".title-focus").innerHTML = newName;
                                return newName;
                            }
                        },
                        { data: () => get(form, "price").value },
                        { data: () => get(form, "minified_desc").value },
                        { data: () => get(form, "desc").innerHTML },
                        { data: null },
                        { data: () => get(form, "time").value },
                        { data: () => sendImage(objectId(), "Service") },
                        { data: () => get(form, "propper_clothing").value }
                    ];
                    for (let i = 0; i < data.length; i++) data[i].id = ids[i];
                    get(form, "image").addEventListener("change", () => readImage(get(form, "image"), data => get(form, "image_display").querySelector("img").setAttribute("src", data)));
                    function sendImage(id, object) {
                        readImage(get(form, "image"), imageData => sendRequest("post", `/${object}/Update`, { id, column: columns[ids.indexOf(data.filter(x => x.id === get(form, "image").getAttribute("id"))[0].id)], value: imageData.split(",")[1] }, { Loader: ".main-loader" }));
                    }

                    const dropdown = get(form, "category");
                    const dropContent = dropdown.querySelector(".dropdown-content").querySelectorAll("label");
                    dropContent.forEach(o => {
                        const dataOption = o.getAttribute("data-option")
                        o.addEventListener("click", () => {
                            sendRequest("post", "/Service/Update", {
                                id: objectId(),
                                column: columns[ids.indexOf(data.filter(x => x.id === dropdown.getAttribute("id"))[0].id)],
                                value: dataOption
                            }, { Loader: ".main-loader" })
                        });
                    });

                    inputs.forEach(i => {
                        const saveBtn = i.querySelector(".save-btn");
                        const el = i.querySelector("input") === null ? i.querySelector("textarea") : i.querySelector("input");
                        if (saveBtn !== null) {
                            saveBtn.addEventListener("click", () => {
                                const dataStatus = el.getAttribute("data-status");
                                console.log(dataStatus);
                                if (dataStatus === "editing") {
                                    el.setAttribute("data-status", "idle");
                                    const inputId = i.querySelector("input") === null ? i.querySelector("textarea").getAttribute("id") : i.querySelector("input").getAttribute("id");
                                    if (inputId === "image") data.filter(x => x.id === inputId)[0].data();
                                    else sendRequest("post", "/Service/Update",
                                        {
                                            id: objectId(),
                                            column: columns[ids.indexOf(data.filter(x => x.id === inputId)[0].id)],
                                            value: data.filter(x => x.id === inputId)[0].data()
                                        }, { Loader: ".main-loader" });
                                }
                            });
                        }
                    });
                }
            }];


        const items = document.querySelectorAll(".item");
        items.forEach(c => {
            const button = c.querySelector("[data-item-button]");
            const form = c.querySelector("[data-form]");
            if (form !== null) {
                const container = form.getAttribute("data-form");
                button.addEventListener("click", () => containers.filter(c => c.id === container)[0].do(form));
            }
        });


        function get(form, input) {
            return form.querySelector(`[data-id='${input}']`);
        }

        function customerDataTaken(res) {
            const form = document.querySelector("[data-form=customer]");
            const Customer = res.customer;
            //form.setAttribute("data-object-id", Customer.Id);
            form.querySelector(".title-focus").innerHTML = Customer.Username;
            get(form, "name").value = Customer.Username;
            get(form, "email").value = Customer.Account.Email;
            get(form, "cpf").value = Customer.CPF;
        }

        function employeeDataTaken(res) {
            const form = document.querySelector("[data-form=employee]");
            const Employee = res.employee;
            form.setAttribute("data-object-id", Employee.Id);
            form.querySelector(".title-focus").innerHTML = Employee.Name;
            get(form, "name").value = Employee.Name;
            get(form, "email").value = Employee.Account.Email;
            get(form, "cpf").value = Employee.CPF;
            get(form, "rg").value = Employee.RG + Employee.RGDig;
            get(form, "phone").value = Employee.Phone;
            get(form, "date").value = formatDateString(Employee.Birth.replace(" 00:00:00", '').trim());
            get(form, "genre").setAttribute("data-option", Employee.Genre);
            get(form, "salary").value = Employee.Salary;

        }

        function packageDataTaken(res) {
            const form = document.querySelector("[data-form=package]");
            const Package = res.package;
            form.setAttribute("data-object-id", Package.Id);
            const table = form.querySelector(".table-content");
            form.querySelector(".title-focus").innerHTML = Package.Name;
            get(form, "name").value = Package.Name;
            get(form, "desc").value = Package.Description;
            get(form, "price").value = Package.Price;

            const servicesObj = Object.values(Package.Services);
            const services = [];
            for (let i = 0; i < servicesObj.length; i++) services.push(servicesObj[i].Name);
            table.setAttribute("data-selected-services", services);
        }

        function serviceDataTaken(res) {
            const form = document.querySelector("[data-form=service]");
            const Service = res.service;
            form.setAttribute("data-object-id", Service.Id);
            form.querySelector(".title-focus").innerHTML = Service.Name;
            get(form, "name").value = Service.Name;
            get(form, "minified_desc").value = Service.MinifiedDesc;
            get(form, "desc").innerHTML = Service.CompleteDesc;
            get(form, "price").value = Service.Price;
            get(form, "propper_clothing").value = Service.PropperClothing;
            get(form, "time").value = `${Service.Time.Hours}:${Service.Time.Minutes}:${Service.Time.Seconds}`;
            get(form, "image_display").querySelector("img").setAttribute("src", readImageFromDatabase(Service.Image));
            get(form, "category").querySelector(".dropdown-select-item").setAttribute("data-option", Service.Category.Id);
        }

        function scheduleDataTaken(res) {
            const form = document.querySelector("[data-form=schedule]");
            const Schedule = res.schedule;
            form.querySelector(".title-focus").innerHTML = Schedule.Date;
            get(form, "service").setAttribute("data-option", Schedule.Service.Name);
            get(form, "employee").setAttribute("data-option", Schedule.Employee.Name);
        }

        function formatDateString(data) {
            var dia = data.split("/")[0];
            var mes = data.split("/")[1];
            var ano = data.split("/")[2];
            return ano + '-' + ("0" + mes).slice(-2) + '-' + ("0" + dia).slice(-2);
        }

